{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div class="pageheader bg__img" style="background-image: url(assets/images/bg-img/04.jpg);">
        <div class="container">
            <div class="pageheader__content text-center">
                <h2>Event List</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Event List</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- ================> Banner section end here <================== -->


    <!-- ================> Hotel section start here <================== -->
	<div class="packege hotel packege--liststyle padding--top padding--bottom">
		<div class="container">
			<div class="section__wrapper">
				<div class="row g-4 row-cols-xl-2 row-cols-1">
				 {% for event in events %}
					<div class="col">
						<div class="packege__item">
							<div class="packege__inner">
                                
								<div class="packege__thumb">
									<a href="tour-single.html"><img src="assets/images/packege/20.jpg" alt="Travel Thumb"></a>
								</div>
								<div class="packege__content">
									<a href="{{path('app_event_edit',{'IDEvent':event.IDEvent})}}"><h4>{{event.getNameEvent()}}</h4></a>
                                    <div class="packege__meta">
                                      <a href="{{path('app_event_show',{'IDEvent':event.IDEvent})}}"> <span><i class="fa-solid fa-location-dot"></i> {{event.getLocationEvent()}}</span></a>
                                        <span class="packege__meta--rating"><i class="fa-solid fa-star"></i> {{event.getDescriptionEvent()}}</span>
                                    </div>
                                    <div class="packege__meta">
                                       <span class="packege__meta--day">
    <i class="fa-regular fa-clock"></i> 
    {{ event.getDateStartEvent()|date('Y-m-d') }} / {{ event.getDateEndEvent()|date('Y-m-d') }}
</span>
                                        <span class="packege__meta--persion"><i class="fa-regular fa-user"></i>{{event.getNbAttendees()}}</span>
                                    </div>
									
									
								</div>
								
							</div>
							
						</div>
					
					</div>
					 	 {%endfor%}
						 </div>
                <ul class="default-pagination justify-content-center mt-5">
                    <li>
                        <a href="#"><i class="fa-solid fa-angle-left"></i></a>
                    </li>
                    <li>
                        <a href="#">01</a>
                    </li>
                    <li>
                        <a href="#" class="active">02</a>
                    </li>
                    <li>
                        <a href="#">03</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa-solid fa-angle-right"></i></a>
                    </li>
                </ul>
			</div>
		</div>
	</div>
    <!-- ================> Hotel section end here <================== -->


    <!-- ================> News Letter section start here <================== -->
	<div class="newsletter padding--top padding--bottom bg__img" style="background: url(assets/images/bg-img/02.jpg)">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-8">
					<div class="section__header text-center">
						<h2>Sign Up For Our Newsletter</h2>
					</div>
					<div class="newsletter__form">
						<form action="#">
							<input type="text" placeholder="Enter your e-mail here">
							<button type="submit" class="default__btn">Subscribe Now</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <h1>Country index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IDCountry</th>
                <th>NameCountry</th>
                <th>DescriptionCountry</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.IDCountry }}</td>
                <td>{{ country.NameCountry }}</td>
                <td>{{ country.DescriptionCountry }}</td>
                <td>
                    <a href="{{ path('app_country_show', {'IDCountry': country.IDCountry}) }}">show</a>
                    <a href="{{ path('app_country_edit', {'IDCountry': country.IDCountry}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_country_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IDBlog</th>
                <th>TitleBlog</th>
                <th>ContentBlog</th>
                <th>LikesBlog</th>
                <th>Categorie</th>
                <th>IDCountry</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.IDBlog }}</td>
                <td>{{ blog.TitleBlog }}</td>
                <td>{{ blog.ContentBlog }}</td>
                <td>{{ blog.LikesBlog }}</td>
                <td>{{ blog.Categorie }}</td>
                <td>{{ blog.IDCountry }}</td>
                <td>
                    <a href="{{ path('app_blog_show', {'IDBlog': blog.IDBlog}) }}">show</a>
                    <a href="{{ path('app_blog_edit', {'IDBlog': blog.IDBlog}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_new') }}">Create new</a>
{% endblock %}
